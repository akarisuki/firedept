- @comments.each do |comment|
  %div{id: "comment_#{comment.id}"}
    = comment.user.username
    = comment.content
    = comment.updated_at.strftime("%Y-%m-%d %H:%M")
  .list-inline-item
    - if user_signed_in? && comment.user_id == current_user.id
      = link_to edit_tweet_comment_path(@tweet_id, comment.id),remote: true do
        %input{type: "submit", value: "編集"}
      = link_to tweet_comment_path(comment.id, comment), method: :delete, remote: true, date: { confirm: '削除してよろしいですか？' } do
        %input{type: "submit", value: "削除"}

-# = paginate(comments)