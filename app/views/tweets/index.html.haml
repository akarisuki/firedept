.main
  .tweets
    .tweets_list
      -  @tweets.each do |tweet|
        .tweets_list--item
          タイトル
            =  link_to tweet.title, tweet_path(tweet.id)
            投稿者
            =  link_to tweet.user.username, user_path(tweet.user.id)
            投稿日
            =  tweet.updated_at
      =  paginate(@tweets)