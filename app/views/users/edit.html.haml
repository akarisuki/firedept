.account-page_inner--left.account-page_header
    %h2 Edit %Account
    %h5 アカウントの編集
    = link_to "ログアウト" destroy_user_session_path, method: :delete, calss: 'btn'
    = link_to "戻る", :back, class: 'btn'
.account-page_inner--right.user-form
    = form_for(currenet_user) do |f|
        .field
            .field-label
            = f.labal :username
            .field-input
            = f.text_field :username, autofocus: true
        .field
            .field-label
            = f.label :email
            .field-input
            = f.email_field :email
        .field
            .field-label
            = f.label :avatar
            .field-label
            = f.file_field :avatar
        .actions
            = f.submit "Update", class: 'btn'